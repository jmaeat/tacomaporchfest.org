---
import '@styles/global.scss';
import '@styles/tailwind.css';

import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

const { title, description, prev, next, type, datePublished, dateModified } = Astro.props;
---

<html lang="en" class="h-full">
	<head>
		<BaseHead {title} {description} {prev} {next} {type} {datePublished} {dateModified} />
	</head>
	<body class="h-full text-copy bg-background">
		<header>
			<Header />
		</header>
		<main>
			<slot />
		</main>
		<footer class="sticky top-[100vh] mt-20 border-t-2 border-copy border-opacity-10">
			<Footer />
		</footer>
	</body>
</html>
