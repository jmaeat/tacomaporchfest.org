---
import BaseLayout from '@layouts/BaseLayout.astro';
import FormEmbed from '@components/FormEmbed.astro';

const formURL =
	'https://docs.google.com/forms/d/e/1FAIpQLSczgkg6v7A_CSeRYz-AqgI-rysBxGL5HWABSKR6Ea_6ENBQ2w/viewform?embedded=true';

const title = 'Porch Owners Application',
	description = 'Sign up to be an incredible host for our inaugural season!';
---

<BaseLayout {title} {description}>
	<section aria-labelledby="#title" class="container my-8 lg:my-16">
		<h1 id="title" class="font-bold font-serif text-5xl text-center">Porch Owners Application</h1>
		<div class="grid md:grid-cols-2 gap-8 pt-20">
			<div class="lg:pr-8">
				<h2 class="text-2xl font-serif font-bold mb-4 md:mb-6 md:text-4xl">Sign-up Information</h2>
				<p>
					Are you interested in hosting a band on your porch or yard? <a
						class="underline text-secondary"
						href="/updates/frequently-asked-questions">Check out our FAQs</a
					> and fill out this form so we can match you with a local artist. Thanks in advance for building
					community, supporting local arts, and being a hub at the greatest block party of all time in
					the best neighborhood ever!
				</p>
			</div>
			<div>
				<FormEmbed href={formURL} title="Porchfest Porch Owners Sign-up Form" />
			</div>
		</div>
	</section>
</BaseLayout>
