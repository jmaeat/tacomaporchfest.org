---
import BaseLayout from '@layouts/BaseLayout.astro';
import FormEmbed from '@components/FormEmbed.astro';

const formURL =
	'https://docs.google.com/forms/d/e/1FAIpQLSfc6foZVCYWm3-Z3UQ7hw5v9jmKaEgZ8_XkQLF6tzBWJVO9Vg/viewform?embedded=true';

const title = 'Volunteer Applications',
	description = 'Sign up to be an incredible volunteer for our inaugural season!';
---

<BaseLayout {title} {description}>
	<section aria-labelledby="#title" class="container my-8 lg:my-16">
		<h1 id="title" class="font-bold font-serif text-5xl text-center">Volunteer Applications</h1>
		<div class="grid md:grid-cols-2 gap-8 pt-20">
			<div class="lg:pr-8">
				<h2 class="text-2xl font-serif font-bold mb-4 md:mb-6 md:text-4xl">Sign-up Information</h2>
				<p>
					We need each and every one of you and your unique talents to pull this off. Please fill
					out your info and we will be in touch! We are looking for people to help plan, hype,
					distribute posters, assist porches, assist bands, litter patrol, get equipment where it
					needs to go, and help put out fires on the day of event.<br /><br />After the event, we
					need help beautifying our neighborhood by picking up litter and disposing of it in the
					City-provided trash receptacles.
				</p>
			</div>
			<div>
				<FormEmbed href={formURL} title="Porchfest Volunteer Sign-up Form" />
			</div>
		</div>
	</section>
</BaseLayout>
