---
import SiteBanner from '@/components/SiteBanner.astro';
import { Icon } from 'astro-icon';

const navLinks = [
	{
		name: 'Artists',
		href: '/artists',
	},
	{
		name: 'Porch Hosts',
		href: '/porch-owners',
	},
	{
		name: 'Volunteers',
		href: '/volunteers',
	},
	{
		name: 'Updates',
		href: '/updates'
	},
	{
		name: 'Contact Us',
		href: 'mailto:tacomaporchfest@gmail.com?subject=Hey, Porchfest!',
	},
];
---
<nav class="first:text-center relative container border-b border-copy border-opacity-10">
	<SiteBanner />
	<ul
		class="flex gap-6 sm:gap-x-6 justify-center md:gap-x-12 flex-wrap font-medium text-sm lg:text-lg leading-none py-3"
		role="list"
	>
		{navLinks.map((navLink) =>
			<li>
				<a 
					class="font-medium px-3 py-2 lg:py-[10px] border-b-4 border-transparent hover:border-tertiary active:border-tertiary focus:border-tertiary transition-colors duration-200 ease-in-out" href={navLink.href}
				>
						{navLink.name}
				</a>
			</li>
		)}
	</ul>
</nav>
